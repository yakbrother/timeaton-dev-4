---
interface Props {
  title: string;
  description: string;
  publicationDate: Date;
  category: string;
  slug: string;
}

const { title, description, publicationDate, category, slug } = Astro.props;

const date = new Date(publicationDate);
const formattedDate = date.toLocaleDateString('en-UK', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<article class="post-card">
  <a href={`/posts/${slug}`}>
  <div class="post-meta">
    <time datetime={date.toISOString()}>{formattedDate}</time>
  </div>
  <h3 class="post-title">
    {title}
  </h3>
  <p class="post-description">{description}</p>
  </a>
</article>

<style>
  .post-card {
    padding: 1rem;
    background: var(--color-card);
    border-radius: 0.75rem;
    border: 1px solid var(--color-border);
    transition: transform 0.2s ease-in-out, border-color 0.2s ease-in-out;
  }

  .post-card:hover {
    border-color: var(--color-accent);
    background: var(--color-pink-hover);
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  .post-card a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.5rem;
    font-size: var(--size-step--1);
    color: var(--color-text-muted);
  }

  /* category removed from UI */

  .post-title {
    margin: 0;
    margin-bottom: 0.5rem;
    font-size: var(--size-step-0);
    font-weight: 600;
  }

  .post-title a {
    color: var(--color-text-base);
    text-decoration: none;
    padding: 0;
  }

  .post-card:hover a { color: var(--color-dark); }
  .post-card:hover .post-description,
  .post-card:hover .post-meta { color: var(--color-dark); }

  .post-description {
    margin: 0;
    font-size: var(--size-step--1);
    color: var(--color-text-muted);
  }
</style>
